<UserControl x:Class="Fingerprint.AdminUI.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Attendance Settings" 
                 Style="{StaticResource TitleStyle}"
                 Grid.Row="0"
                 Margin="0,0,0,20"/>

        <!-- Content -->
        <materialDesign:Card Grid.Row="1" Padding="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Settings Form -->
                <StackPanel Grid.Row="0" MaxWidth="600">
                    <TextBlock Text="Working Hours Configuration" 
                             Style="{StaticResource SubtitleStyle}"/>

                    <Grid Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Check-in Start Time -->
                        <StackPanel Grid.Column="0" Grid.Row="0">
                            <TextBlock Text="Check-in Start Time" 
                                     FontWeight="SemiBold"
                                     Margin="0,0,0,5"/>
                            <TextBox Text="{Binding CheckInStart, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource MaterialDesignFilledTextBox}"
                                   materialDesign:HintAssist.Hint="HH:mm (e.g., 08:00)"
                                   FontSize="16"
                                   FontFamily="Consolas"/>
                        </StackPanel>

                        <!-- Check-out End Time -->
                        <StackPanel Grid.Column="2" Grid.Row="0">
                            <TextBlock Text="Check-out End Time" 
                                     FontWeight="SemiBold"
                                     Margin="0,0,0,5"/>
                            <TextBox Text="{Binding CheckOutEnd, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource MaterialDesignFilledTextBox}"
                                   materialDesign:HintAssist.Hint="HH:mm (e.g., 17:00)"
                                   FontSize="16"
                                   FontFamily="Consolas"/>
                        </StackPanel>

                        <!-- Lunch Break Start -->
                        <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,20,0,0">
                            <TextBlock Text="Lunch Break Start" 
                                     FontWeight="SemiBold"
                                     Margin="0,0,0,5"/>
                            <TextBox Text="{Binding LunchBreakStart, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource MaterialDesignFilledTextBox}"
                                   materialDesign:HintAssist.Hint="HH:mm (e.g., 12:00)"
                                   FontSize="16"
                                   FontFamily="Consolas"/>
                        </StackPanel>

                        <!-- Lunch Break End -->
                        <StackPanel Grid.Column="2" Grid.Row="1" Margin="0,20,0,0">
                            <TextBlock Text="Lunch Break End" 
                                     FontWeight="SemiBold"
                                     Margin="0,0,0,5"/>
                            <TextBox Text="{Binding LunchBreakEnd, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource MaterialDesignFilledTextBox}"
                                   materialDesign:HintAssist.Hint="HH:mm (e.g., 13:00)"
                                   FontSize="16"
                                   FontFamily="Consolas"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- Information Box -->
                <materialDesign:Card Grid.Row="1" 
                                   Background="#E3F2FD"
                                   Margin="0,30,0,0"
                                   Padding="20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <materialDesign:PackIcon Kind="Information" 
                                                   Width="24" Height="24"
                                                   Foreground="#1976D2"
                                                   Margin="0,0,10,0"/>
                            <TextBlock Text="How it works" 
                                     FontSize="16"
                                     FontWeight="SemiBold"
                                     Foreground="#1976D2"/>
                        </StackPanel>
                        
                        <TextBlock TextWrapping="Wrap" Foreground="#0D47A1">
                            <Run Text="• First fingerprint of the day = Check-in"/>
                            <LineBreak/>
                            <Run Text="• Last fingerprint of the day = Check-out"/>
                            <LineBreak/>
                            <Run Text="• Lunch break time is automatically subtracted from worked hours"/>
                            <LineBreak/>
                            <Run Text="• Worked Hours = (Check-out - Check-in) - Lunch Break Duration"/>
                        </TextBlock>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Save Button -->
                <StackPanel Grid.Row="2" Margin="0,30,0,0">
                    <Button Command="{Binding SaveSettingsCommand}"
                          Style="{StaticResource MaterialDesignRaisedButton}"
                          Height="50"
                          FontSize="16">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ContentSave" 
                                                       Width="24" Height="24" 
                                                       VerticalAlignment="Center" 
                                                       Margin="0,0,10,0"
                                                       Visibility="{Binding IsSaving, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                <ProgressBar IsIndeterminate="True"
                                           Width="24" Height="24"
                                           Margin="0,0,10,0"
                                           Visibility="{Binding IsSaving, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                <TextBlock VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Save Settings"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSaving}" Value="True">
                                                    <Setter Property="Text" Value="Saving..."/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>

                <!-- Status Message -->
                <TextBlock Grid.Row="3"
                         Text="{Binding StatusMessage}"
                         FontSize="14"
                         FontWeight="SemiBold"
                         HorizontalAlignment="Center"
                         Margin="0,20,0,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SaveSuccess}" Value="True">
                                    <Setter Property="Foreground" Value="Green"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
