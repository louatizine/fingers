<UserControl x:Class="Fingerprint.AdminUI.Views.AttendanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Attendance Check-In / Check-Out" 
                   Style="{StaticResource TitleStyle}"
                   Margin="0,0,0,20"/>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel MaxWidth="500">
                
                <!-- Employee Selection -->
                <materialDesign:Card Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Employee Information" 
                                 FontSize="16" 
                                 FontWeight="Bold" 
                                 Margin="0,0,0,15"/>
                        
                        <TextBox x:Name="EmployeeIdTextBox"
                               materialDesign:HintAssist.Hint="Employee ID"
                               Text="{Binding EmployeeId, UpdateSourceTrigger=PropertyChanged}"
                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                               Margin="0,0,0,15"/>
                        
                        <TextBlock Text="{Binding EmployeeName}" 
                                 FontWeight="SemiBold"
                                 Foreground="{DynamicResource PrimaryHueMidBrush}"
                                 Margin="0,0,0,10"
                                 Visibility="{Binding EmployeeName, Converter={StaticResource StringToVisibilityConverter}}"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Check-In / Check-Out Buttons -->
                <materialDesign:Card Padding="20" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Check-In Button -->
                        <Button Grid.Column="0"
                              Command="{Binding CheckInCommand}"
                              Style="{StaticResource MaterialDesignRaisedButton}"
                              Height="100"
                              materialDesign:ButtonAssist.CornerRadius="10">
                            <Button.Background>
                                <SolidColorBrush Color="#4CAF50"/>
                            </Button.Background>
                            <StackPanel>
                                <materialDesign:PackIcon Kind="Login" 
                                                       Width="40" Height="40"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,0,0,10"/>
                                <TextBlock Text="Check In" 
                                         FontSize="16" 
                                         FontWeight="Bold"
                                         HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Check-Out Button -->
                        <Button Grid.Column="2"
                              Command="{Binding CheckOutCommand}"
                              Style="{StaticResource MaterialDesignRaisedButton}"
                              Height="100"
                              materialDesign:ButtonAssist.CornerRadius="10">
                            <Button.Background>
                                <SolidColorBrush Color="#2196F3"/>
                            </Button.Background>
                            <StackPanel>
                                <materialDesign:PackIcon Kind="Logout" 
                                                       Width="40" Height="40"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,0,0,10"/>
                                <TextBlock Text="Check Out" 
                                         FontSize="16" 
                                         FontWeight="Bold"
                                         HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </materialDesign:Card>

                <!-- Status Message -->
                <materialDesign:Card Padding="20" 
                                   Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="{Binding StatusMessage}" 
                                 TextWrapping="Wrap"
                                 FontSize="14"
                                 Foreground="{Binding StatusColor}"/>
                        
                        <TextBlock Text="{Binding LastActionTime, StringFormat='Time: {0:HH:mm:ss}'}" 
                                 Margin="0,10,0,0"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Today's Summary -->
                <materialDesign:Card Padding="20" Margin="0,20,0,0"
                                   Visibility="{Binding ShowSummary, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Today's Summary" 
                                 FontSize="16" 
                                 FontWeight="Bold" 
                                 Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Check-In:" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                     Text="{Binding TodayCheckIn, StringFormat='{}{0:HH:mm:ss}', FallbackValue='Not yet'}" 
                                     FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Check-Out:" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                     Text="{Binding TodayCheckOut, StringFormat='{}{0:HH:mm:ss}', FallbackValue='Not yet'}" 
                                     FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Worked Hours:" Margin="0,5,10,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" 
                                     Text="{Binding WorkedHours, StringFormat='{}{0:F2}h', FallbackValue='-'}" 
                                     FontWeight="Bold"
                                     Foreground="{DynamicResource PrimaryHueMidBrush}"
                                     Margin="0,5,0,0"/>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
